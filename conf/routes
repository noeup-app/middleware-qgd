# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                qgd.authorizationClient.controllers.ApplicationController.index
GET         /signIn                          qgd.authorizationClient.controllers.ApplicationController.signInAction
GET         /signUp                          qgd.authorizationClient.controllers.ApplicationController.signUpAction
GET         /signOut                         qgd.authorizationClient.controllers.ApplicationController.signOut
GET         /forgotPassword                         qgd.authorizationClient.controllers.ApplicationController.forgotPassword
GET         /authenticate/:provider          qgd.authorizationClient.controllers.SocialAuthController.authenticateAction(provider)
POST        /authenticate/credentials        qgd.authorizationClient.controllers.LoginController.authenticateAction
POST        /signUp                          qgd.authorizationClient.controllers.SignUpController.signUpAction
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)


# Clients management
GET      /clients/                         qgd.authorizationServer.controllers.Clients.list
GET      /client/new                       qgd.authorizationServer.controllers.Clients.create
POST     /client/add                       qgd.authorizationServer.controllers.Clients.add
POST     /client/update                    qgd.authorizationServer.controllers.Clients.update
GET      /client/edit/:id                  qgd.authorizationServer.controllers.Clients.edit(id: String)
PUT      /client/                          qgd.authorizationServer.controllers.Clients.update
GET      /client/:id                       qgd.authorizationServer.controllers.Clients.get(id: String)
DELETE   /client/:id                       qgd.authorizationServer.controllers.Clients.delete(id: String)

# page that allow user to authorize client
#GET      /apps/authorize/                  qgd.authorizationServer.controllers.Apps.authorize
#POST     /apps/send_auth/                  qgd.authorizationServer.controllers.Apps.send_auth


# OAuth2 Routes
